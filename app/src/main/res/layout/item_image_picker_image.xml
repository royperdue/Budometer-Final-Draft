<?xml version="1.0" encoding="utf-8"?>
<com.app.budometer.views.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="center">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_desc_image"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/view_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/item_file_type_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_alpha_aa"
        android:paddingBottom="@dimen/pad4dp"
        android:paddingLeft="@dimen/pad16dp"
        android:paddingRight="@dimen/pad16dp"
        android:paddingTop="@dimen/pad4dp"
        android:text="@string/gif"
        android:textColor="@color/white"
        android:textSize="@dimen/txt12sp"
        android:visibility="gone"
        tools:visibility="visible"/>
</com.app.budometer.views.SquareFrameLayout>
